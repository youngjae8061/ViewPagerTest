<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/txtMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="콘티넨탈 코리아에 오신 것을 환영합니다!"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='"콘티넨탈 코리아 어플리케이션은\n보도자료, 채용, 지속 가능성, 사옵본부 소개 및 제품 정보 등\n회사에 대한 정보가 모여 있는 허브입니다."'
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtMain"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/img1"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/shape_round"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSub"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/img2"
            android:scaleType="fitXY"
            android:layout_marginRight="25dp"
            android:layout_marginTop="65dp"
            android:paddingBottom="8sp"
            android:background="@drawable/shape_round"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSub"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/img3"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_round"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/img4"
            android:scaleType="fitXY"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_round"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img2"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/img5"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_round"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shape_round"
            android:scaleType="fitXY"
            android:src="@drawable/img6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img4"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>